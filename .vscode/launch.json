{
    // Utilisez IntelliSense pour en savoir plus sur les attributs possibles.
    // Pointez pour afficher la description des attributs existants.
    // Pour plus d'informations, visitez : https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Authentication",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/packages/authentication-service",
            "remoteRoot": "/opt/app",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Functions",
            "port": 9230,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/packages/functions-service",
            "remoteRoot": "/opt/app",
            "protocol": "inspector"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Quasar",
            "url": "http://app.localhost:80",
            "webRoot": "${workspaceRoot}/src",
            "sourceMaps": true,
            "breakOnLoad": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        }
    ]
}