{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "services",
    "server",
    "scripts",
    "components",
    "backup"
  ]
}
