{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv concurrently \"./scripts/hasura-dev.sh\" \"lerna run watch --stream -- \"",
    "dummey": "docker build  -t platyplus/monorepo:latest . && ",
    "build": "lerna run build",
    "docker:clean": "echo TODO",
    "docker:compile": "lerna exec 'test -e $PWD/Dockerfile && docker build -t $(echo $LERNA_PACKAGE_NAME | cut -c 2-):$(yarn info $LERNA_PACKAGE_NAME version -s) -f $PWD/Dockerfile $LERNA_ROOT_PATH || exit 0'",
    "docker:build": "yarn run docker:clean && yarn run docker:compile"
  },
  "devDependencies": {
    "@types/node": "12.7.4",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "@vue/eslint-config-standard": "4.0.0",
    "babel-plugin-wildcard": "5.0.0",
    "concurrently": "^4.1.2",
    "dotenv-cli": "^2.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.1.0",
    "eslint-loader": "2.2.1",
    "eslint-plugin-vue": "5.2.3",
    "github-label-sync": "1.4.1",
    "lerna": "^3.16.4",
    "typescript": "3.5.3"
  }
}
